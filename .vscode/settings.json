{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python",
  "python.terminal.activateEnvironment": true,
  "editor.rulers": [40, 80],

  "cSpell.language": "de",
  "cSpell.enabled": true,
  "cSpell.allowCompoundWords": true,
  "cSpell.ignoreRegExpList": [ // Bl√∂cke ignorieren
    "/```[\\s\\S]*?```/g"
  ],
  "cSpell.languageSettings": [
    {
      "languageId": "python",
      "includeRegExpList": [
        "comments",
        "strings"
      ]
    }
  ],
  "cSpell.words": [
    "Clusterstrukturen",
    "datenzentrierte",
    "Emmy",
    "Exponentialdarstellung",
    "gezoomt",
    "High",
    "Lagrange",
    "Matplotlib",
    "Noether",
    "Noethers",
    "Numpy",
    "plotly",
    "Publikationsgrafiken",
    "Ready",
    "Scatterplot"
  ],
}